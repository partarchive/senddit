<%= form_for @post do |f| %>

  <div class="clearfix <%= "error" if f.has_errors?(:title) %>">
    <%= f.label :title %>
    <div class="input">
      <%= f.text_field :title %>
      <%= f.errors_for :title %>
    </div>
  </div>

  <div class="clearfix <%= "error" if f.has_errors?(:link) %>">
    <%= f.label :link %>
    <div class="input">
      <%= f.text_field :link %>
      <%= f.errors_for :link %>
    </div>
  </div>

  <div class="clearfix <%= "error" if f.has_errors?(:email) %>">
    <%= f.label :email %>
    <div class="input">
      <%= f.text_field :email %>
      <%= f.errors_for :email %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "btn primary" %>
    <%= link_to "Back", posts_path, class: "btn" %>
  </div>

<% end %>

<%= semantic_form_for @post do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :link %>
    <%= f.input :email %>
  <% end %>
  <%= f.buttons do %>
    <%= f.submit class: "btn primary" %>
    <%= link_to "Cancel", posts_path, class: "btn" %>
  <% end %>
<% end %>

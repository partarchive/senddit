<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Link:</b>
  <%= @post.link %>
</p>

<p>
  <b>Email:</b>
  <%= @post.email %>
</p>

<%= render :partial => '/comments/form' %>

Comments :


<% @post.comments.each do |comment| %>
  <div class="post">
    <div class="comment-text"><%= comment.text %></div>
    <div class="comment-email"><%= comment.email %></div>
  </div>
<% end %>
